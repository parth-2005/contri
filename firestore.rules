rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a group member
    function isGroupMember(groupId) {
      return isAuthenticated() && 
             request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
    }
    
    // ========================================
    // USERS COLLECTION
    // ========================================
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can create and update their own profile
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow reading user profiles by group members (for displaying names)
      allow read: if isAuthenticated();
      
      // No one can delete users (use Firebase Auth instead)
      allow delete: if false;
    }
    
    // ========================================
    // GROUPS COLLECTION
    // ========================================
    match /groups/{groupId} {
      // Only group members can read the group
      allow read: if isGroupMember(groupId);
      
      // Any authenticated user can create a group (they will be added as a member)
      allow create: if isAuthenticated() && 
                       request.auth.uid in request.resource.data.members;
      
      // Only group members can update the group
      allow update: if isGroupMember(groupId);
      
      // Only group members can delete the group
      allow delete: if isGroupMember(groupId);
    }
    
    // ========================================
    // EXPENSES COLLECTION
    // ========================================
    match /expenses/{expenseId} {
      // Personal expenses: only the owner can read
      allow read: if isAuthenticated() && 
                     (resource.data.groupId == null && 
                      resource.data.paidBy == request.auth.uid);
      
      // Group expenses: only group members can read
      allow read: if isAuthenticated() && 
                     (resource.data.groupId != null && 
                      isGroupMember(resource.data.groupId));
      
      // Personal expenses: only the owner can create
      allow create: if isAuthenticated() && 
                       (request.resource.data.groupId == null && 
                        request.resource.data.paidBy == request.auth.uid &&
                        request.resource.data.type == 'personal');
      
      // Group expenses: only group members can create
      allow create: if isAuthenticated() && 
                       (request.resource.data.groupId != null && 
                        isGroupMember(request.resource.data.groupId) &&
                        request.resource.data.type in ['group', 'family']);
      
      // Only the creator or group members can update
      allow update: if isAuthenticated() && 
                       ((resource.data.groupId == null && resource.data.paidBy == request.auth.uid) ||
                        (resource.data.groupId != null && isGroupMember(resource.data.groupId)));
      
      // Only the creator or group members can delete
      allow delete: if isAuthenticated() && 
                       ((resource.data.groupId == null && resource.data.paidBy == request.auth.uid) ||
                        (resource.data.groupId != null && isGroupMember(resource.data.groupId)));
    }
    
    // ========================================
    // DEFAULT DENY
    // ========================================
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
